<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_marginBottom="20dp"
    android:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/iv_userPhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/emoji" />

        <TextView
            android:id="@+id/tv_fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_userPhoto"
            android:text="Abd. Rafiq Anwar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="abd.rafiqanwar"
            android:layout_toRightOf="@id/iv_userPhoto"
            android:layout_below="@id/tv_fullName"
            android:layout_marginLeft="16dp"
            android:ellipsize="end"
            android:maxLines="3" />

        <ImageView
            android:id="@+id/iv_postPhoto"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/iv_userPhoto" />

        <TextView
            android:id="@+id/tv_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_postPhoto"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>