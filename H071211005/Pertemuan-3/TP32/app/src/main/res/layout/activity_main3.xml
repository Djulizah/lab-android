<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/kara"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/akronim"
        android:text="Kara'sn Quiz"
        android:textColor="#8CA1AE"
        android:textSize="40sp"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvNomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Quis 1 of 5"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:alpha="0.83"
        android:backgroundTint="#D3CEDF"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            >
            <TextView
                android:id="@+id/tvQues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/autour_one"
                android:text="Pertanyaan"
                android:textColor="#3D4260"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="400dp"
                android:backgroundTint="#D3CEDF"
                app:cardCornerRadius="25dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnmc"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#8CA1AE"
                    android:layout_gravity="center"
                    android:text="..."
                    android:textColor="@color/black"
                    app:cornerRadius="15dp"
                    android:textStyle="bold"/>


                <Button
                    android:id="@+id/btnmc2"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:text="isisisisisi"
                    android:layout_gravity="center"
                    android:textColor="#0C0C0C"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#8CA1AE"
                    app:cornerRadius="15dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnmc3"
                    android:layout_width="300dp"
                    android:layout_height="60dp"
                    android:text="blablabla"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#8CA1AE"
                    app:cornerRadius="15dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>