<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/teal_200"
        >
        <TextView
            android:id="@+id/base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih bangun ruang : "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/blockSpinner"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@id/base"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="blocksplaceholder"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calcbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/upper"
        android:padding="20dp"
        >
        <EditText
            android:id="@+id/fieldtxtj"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="jari-jari"
            />
        <EditText
            android:id="@+id/fieldtxtp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/fieldtxtj"
            android:hint="panjang"
            />
        <EditText
            android:id="@+id/fieldtxtl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/fieldtxtp"
            android:hint="lebar"
            />
        <EditText
            android:id="@+id/fieldtxtt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/fieldtxtl"
            android:hint="tinggi"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HITUNG"
        app:layout_constraintTop_toBottomOf="@id/calcbox"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hasil"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn"
        android:padding="20dp"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>